{
    "name": "nodejs-api",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "env-cmd -f ./config/test.env jest --verbose --runInBand",
        "test:coverage": "env-cmd -f ./config/test.env jest --runInBand --coverage",
        "test:band": "env-cmd -f ./config/test.env jest --runInBand",
        "start": "env-cmd -f ./config/prod.env node build/index.js",
        "dev:local": "env-cmd -f ./config/dev.env nodemon --exec babel-node src/index.js",
        "dev:remote": "env-cmd -f ./config/prod.env nodemon --exec babel-node src/index.js",
        "build": "babel ./src --out-dir ./build",
        "lint": "eslint ."
    },
    "jest": {
        "testPathIgnorePatterns": [
          "build/"
        ],
        "collectCoverageFrom": [
          "src/db/{!(database),}.js"
        ]
      },
    "author": "McDavid Lubega",
    "license": "MIT",
    "dependencies": {
        "bcrypt": "^5.0.1",
        "celebrate": "^15.0.1",
        "dotenv": "^16.0.1",
        "env-cmd": "^10.1.0",
        "eslint-visitor-keys": "^3.3.0",
        "express": "^4.18.1",
        "joi": "^17.6.0",
        "jsonwebtoken": "^8.5.1",
        "mongoose": "^6.5.0",
        "nodemon": "^2.0.19",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@babel/cli": "^7.18.10",
        "@babel/core": "^7.18.10",
        "@babel/node": "^7.18.10",
        "@babel/preset-env": "^7.18.10",
        "@babel/runtime": "^7.18.9",
        "eslint": "^8.21.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.26.0",
        "eslint-plugin-prettier": "^4.2.1",
        "jest": "^28.1.2",
        "prettier": "^2.7.1",
        "supertest": "^6.2.4"
    }
}
